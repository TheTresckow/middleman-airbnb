<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.cities[owner] %>

<!-- Inject flat data in template -->

<div class="wrapper" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');">
</div>

<div class="flat-details">
  <div class="row">

    <div class="col-xs-12 col-sm-6 col-sm-offset-1">
      <div class="flat-detail">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
        <p class="owner"><%= flat.name %></p>
        <h1><%= flat.description %></h1>
        <p class="city"><%= flat.city_name %></p>
        <p><%= flat.wifi %></p>
        <p class="rating">
          <% flat.rating.times do %>
          <i class="fas fa-star" style="color: #DDA12D"></i>
          <% end %>
          <% gs = 5 - flat.rating %>
          <% gs.times do %>
          <i class="fas fa-star" style="color: #B5B8B9"></i>
          <% end %>
        </p>
      </div>
    </div>


    <div class="col-xs-12 col-sm-4">
      <div class="booking">
        <form action="#" >
          <h4>Book this flat</h3>
            <div class="form-group">
              <div class="row">
                <div class="col-xs-6">
                  <input type="text" class="form-control" placeholder="checkin" id="checkin">
                </div>
                <div class="col-xs-6">
                  <input type="text" class="form-control" placeholder="checkout">
                </div>
              </div>
            </div>
            <div class="form-group">
              <select name="" id="guests" class="form-control">
                <option value="1">1 guest</option>
                <option value="2">2 guests</option>
                <option value="3">3 guests</option>
              </select>
            </div>
            <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
          </form>
        </div>
      </div>
</div>
    </div>
  </div>


